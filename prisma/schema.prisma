// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id
  name          String
  email         String   @unique
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions Session[]
  accounts Account[]
  chats    Chat[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("verification")
}

model Chat {
  id           String    @id @default(cuid())
  userId       String
  title        String    @default("New Training Session")
  mode         String    @default("training") // "training" or "work"
  lastMessageAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user     User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@map("chat")
}

model ChatMessage {
  id        String   @id @default(cuid())
  chatId    String
  role      String
  content   String
  createdAt DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@map("chat_message")
}

// Purchase Order - Sales Order - Loading Slip Item Models

model PurchaseOrder {
  id           String   @id @default(cuid())
  poNumber     String   @unique
  customerName String
  status       String   @default("in-progress") // pending, in-progress, completed
  stage        Int      @default(1) // 1-6 workflow stages
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  salesOrders SalesOrder[]

  @@map("purchase_order")
}

model SalesOrder {
  id                  String   @id @default(cuid())
  soNumber            String
  purchaseOrderId     String
  vehicleNumber       String?
  transportId         String?
  driverMobile        String?
  containerNumber     String?
  sealNumber          String?
  weight              Decimal?
  containerType       String?
  deliveryLocations   String?
  specialInstructions String?
  lrNumber            String?  // Lorry Receipt Number (Stage 5 - User Input)
  lrDate              DateTime? // Lorry Receipt Date (Stage 5 - User Input)
  status              String   @default("pending") // pending, pending-input, in-progress, completed
  requiresInput       Boolean  @default(true)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  purchaseOrder PurchaseOrder     @relation(fields: [purchaseOrderId], references: [id], onDelete: Cascade)
  items         LoadingSlipItem[]
  invoice       Invoice?

  @@map("sales_order")
}

model LoadingSlipItem {
  id           String @id @default(cuid())
  salesOrderId String
  lsNumber     String
  material     String
  status       String @default("pending") // pending, in-progress, completed

  // Aman fields (read-only, populated via API later)
  materialDescription String?
  orderQuantity       Int?
  orderWeight         Decimal?
  grnNumber           String? // GRN Number (from Aman Stage 4)

  // User input fields (editable via forms)
  plantInvoiceNumber   String?   // Stage 3 - Plant Invoice Number
  plantInvoiceDate     DateTime? // Stage 3 - Plant Invoice Date
  invoiceQuantity      Int?      // Stage 3 - Invoice Quantity
  invoiceWeight        Decimal?  // Stage 3 - Invoice Weight
  receivedQuantity     Int?      // Stage 5 - Received Quantity
  receivedWeight       Decimal?  // Stage 5 - Received Weight
  deliveryStatus       String?   // Stage 5 - Delivery Status
  accountPayableStatus String?   // Stage 5 - Account Payable Status

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salesOrder SalesOrder @relation(fields: [salesOrderId], references: [id], onDelete: Cascade)
  emails     Email[]

  @@unique([lsNumber, material])
  @@map("loading_slip_item")
}

model Email {
  id                String    @id @default(cuid())
  loadingSlipItemId String
  gmailMessageId    String    @unique // Gmail message ID for reply tracking
  gmailThreadId     String             // Thread ID to find replies
  recipientEmail    String
  subject           String
  status            String    @default("sent") // sent, replied, processed
  sentAt            DateTime  @default(now())
  repliedAt         DateTime?

  loadingSlipItem LoadingSlipItem @relation(fields: [loadingSlipItemId], references: [id], onDelete: Cascade)

  @@map("email")
}

model Invoice {
  id            String   @id @default(cuid())
  salesOrderId  String   @unique // ONE-TO-ONE with SO
  invoiceNumber String   // HRJ Invoice Number (from Aman Stage 4)
  obdNumber     String?  // Outbound Delivery Number (from Aman Stage 4)
  amount        Decimal?
  status        String   @default("pending") // pending, created, shipped

  // Shipment details (Stage 5 - User Input)
  shipmentType String?
  plantCode    String?
  notes        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  salesOrder SalesOrder @relation(fields: [salesOrderId], references: [id], onDelete: Cascade)

  @@map("invoice")
}
